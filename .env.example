# Application
PORT=3001
NODE_ENV=development

# API Configuration
API_PREFIX=api
API_VERSION=v1

# Security
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRATION=1d

# CORS
CORS_ORIGIN=*

# DATABASE 
PG_ADMIN_EMAIL=guest@admin.com
PG_ADMIN_PASSWORD=guest
DATABASE_NAME=loop
DATABASE_USER=loop_user
DATABASE_PASSWORD=loop_password

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_RATELIMIT=true

# Rate Limit
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# API Keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt_model
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

MUSICAI_API_KEY=your_musicai_api_key
MUSICAI_BASE_URL=your_music_ai_base_url

SOUNDCHARTS_API_BASE_URL=your_sound_chart_url
SOUNDCHARTS_APP_ID=your_sound_chart_app_id # Production
SOUNDCHARTS_API_KEY=your_sound_chart_api_key # Production